
<script>
    $("#username").val(Cookies.get("username"))


     $("#btn-save2").click(function () {
        $.ajax({
            type: "POST",
            url: "@Url.Action("SaveBitmap", "PixelCreator")",
            data: {
                bitmapname: $("#bitmapname").val(),
                username: $("#username").val(),
                bitmap: "@ViewBag.Bitmap"
            }
         });

         bootbox.alert({
             message: "<br/> <h1>Bitmap saved! Thanks :)</h1> ",
             className: 'rubberBand animated'
         });
     });
</script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Save Bitmap?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="bitmapname">Bitmap name</label>
                <input type="text" class="form-control" id="bitmapname" placeholder="Bitmap name">
            </div>
            <div class="form-group">
                <label for="username">Your Username</label>
                <input type="text" class="form-control" id="username"  onkeyup="Cookies.set('username', $(this).val(), { expires: 30, path: '' })" placeholder="Username">
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="btn-save2" data-dismiss="modal" class="btn btn-outline-success">
                Save into Database
            </button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Abort</button>
        </div>
    </div>
</div>